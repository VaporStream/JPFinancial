                    <option>Question</option>
                    <option>Support</option>
                </select>
            </div>
            <div class="form-group">
                <label>Message</label>
                <textarea cols="40" rows="6" class="form-control"></textarea>
            </div>
            <button class="btn btn-primary btn-md" type="submit" value="Submit">Submit<span class="glyphicon glyphicon-send"></span></button>
